<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainControl">
    <children>
        <Pane prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: black;">
            <children>
                <Button layoutX="152.0" layoutY="400.0" mnemonicParsing="false" onAction="#startGameS" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: aquamarine;" text="New Game">
                    <font>
                        <Font name="Comic Sans MS" size="16.0" />
                    </font>
                </Button>
                <Button layoutX="152.0" layoutY="482.0" mnemonicParsing="false" onAction="#selectGameS" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: lightblue;" text="Resume Game" textAlignment="CENTER">
                    <font>
                        <Font name="Comic Sans MS" size="16.0" />
                    </font>
                </Button>
                <Button layoutX="152.0" layoutY="569.0" mnemonicParsing="false" onAction="#mainMenuS" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: coral;" text="Exit to Main Menu" textAlignment="CENTER">
                    <font>
                        <Font name="Comic Sans MS" size="16.0" />
                    </font>
                </Button>
                <ImageView fitHeight="150.0" fitWidth="282.0" layoutX="159.0" layoutY="158.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../assets/logo.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
    </children>
</AnchorPane>
